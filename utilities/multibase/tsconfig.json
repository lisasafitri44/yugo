{
	"compilerOptions": {
		"types": ["bun"],
		"outDir": "dist/",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"strict": true,
		"noImplicitOverride": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"module": "NodeNext",
		"sourceMap": true,
		"declaration": true,
		"stripInternal": true,
		"paths": {
			"#bases/base16": ["./lib/bases/base16-web.ts"],
			"#bases/base64": ["./lib/bases/base64-web.ts"],
		},
	},
	"include": ["lib"],
}
